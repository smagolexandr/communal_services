{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
    {% block header %}
    <div class="header clearfix">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="{{ path('homepage') }}">TC</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="nav navbar-nav flex-row">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_index') }}">Заявки</a>
                        </li>
                        <li>
                            <a class="nav-link" href="{{ path('admin_orders_reviews') }}">Нові</a>
                        </li>
                    {% endif %}
                </ul>
                <ul class="nav navbar-nav flex-row justify-content-between ml-auto">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                            <a class="nav-link" href="
                             {% if is_granted('ROLE_USER') %}
                             {{ path('user_index') }}
                             {% else %}
                             {{ path('admin_index') }}
                             {% endif %}
                             ">{{ app.user.firstName }} {{ app.user.lastName }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('logout') }}">Вийти</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Вхід</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('registration') }}">Реєстрація</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </div>
    {% endblock %}

    {% block content %}
    {% endblock %}


{% endblock %}