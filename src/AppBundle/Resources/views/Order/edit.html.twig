{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    TC | Редагування замовлення
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col col-md-6">
                <h1 class="text-center">Редагування замовлення</h1>
                {{ form_start(edit_form) }}
                    <div class="form-group">
                        <label>
                            Опис
                        </label>

                        {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>
                            Категорія
                        </label>

                        {{ form_widget(edit_form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>
                            Адреса
                        </label>

                        {{ form_widget(edit_form.address, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>
                            Дата
                        </label>

                        {{ form_widget(edit_form.date, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">
                            {{ form_widget(edit_form.ownMaterials, {'attr': {'class': 'form-check-input'}}) }}
                            Власні матеріали
                        </label>
                    </div>


                <button type="submit" class="btn btn-primary">Зберегти</button>

                <a class="btn btn-primary" href="
                {% if is_granted('ROLE_ADMIN') %}
                    {{ path('admin_index') }}
                {% elseif is_granted('ROLE_USER') %}
                    {{ path('user_index') }}
                {% endif %}
                ">Повернутись до списку</a>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}


